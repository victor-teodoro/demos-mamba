{
  "name": "my-project",
  "version": "1.0.0",
  "description": "My Mamba project",
  "private": true,
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "webpack-dev-server --config ./build/webpack/dev.js --port 8080",
    "build": "npm run clean && webpack --config ./build/webpack/prod.js",
    "test": "npm run test:unit && npm run test:lint",
    "test:lint": "standard ./src ./test --verbose | snazzy && tslint ./src/**/*.ts ./test/**/*.ts && npm run lint:scss",
    "test:unit": "mocha --compilers ts:ts-node/register --recursive test/unit",
    "lint:js": "standard --fix ./src",
    "lint:scss": "sass-lint ./src/**/*.scss --verbose",
    "lint:ts": "tslint --fix ./src/**/*.ts ./test/**/*.ts",
    "lint": "npm run lint:js && npm run lint:ts && npm run lint:scss"
  },
  "author": "Bruno Calou <bcalou@stone.com.br>",
  "devDependencies": {
    "@types/mocha": "2.2.42",
    "awesome-typescript-loader": "3.2.3",
    "babel-core": "6.25.0",
    "babel-loader": "7.0.0",
    "babel-plugin-transform-object-rest-spread": "6.23.0",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.5.2",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-es2017": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "copy-webpack-plugin": "4.0.1",
    "css-loader": "0.28.4",
    "cssnano": "3.10.0",
    "eslint": "4.2.0",
    "eslint-friendly-formatter": "3.0.0",
    "eslint-loader": "1.9.0",
    "extract-text-webpack-plugin": "2.1.2",
    "file-loader": "0.11.2",
    "html-loader": "0.4.5",
    "html-webpack-plugin": "2.28.0",
    "mocha": "3.5.0",
    "node-sass": "4.5.3",
    "normalize.css": "7.0.0",
    "optimize-css-assets-webpack-plugin": "2.0.0",
    "optimize-js-plugin": "0.0.4",
    "postcss-loader": "2.0.6",
    "progress-bar-webpack-plugin": "1.9.3",
    "rimraf": "2.6.1",
    "sass-lint": "1.10.2",
    "sass-loader": "6.0.5",
    "sasslint-webpack-plugin": "1.0.4",
    "snazzy": "7.0.0",
    "standard": "10.0.2",
    "stylelint-scss": "1.5.1",
    "ts-node": "3.3.0",
    "tslint": "5.6.0",
    "tslint-config-standard": "6.0.1",
    "tslint-loader": "3.5.3",
    "typescript": "2.4.2",
    "url-loader": "0.5.8",
    "webpack": "2.6.1",
    "webpack-dev-server": "2.5.0"
  },
  "dependencies": {
    "babel-runtime": "6.23.0"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
